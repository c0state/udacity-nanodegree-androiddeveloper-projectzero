<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.udacity.stephen.projectzero.projectzero.MainActivity">

    <TextView
        android:text="Project Zero Apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView" />

    <Button
        android:text="Popular Movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/PopularMoviesButton"
        android:onClick="openPopularMovies" />

    <Button
        android:text="Stock Hawk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/PopularMoviesButton"
        android:id="@+id/StockHawkButton"
        android:onClick="openStockHawk" />

    <Button
        android:text="Build It Bigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BuildItBiggerButton"
        android:layout_below="@+id/StockHawkButton"
        android:layout_centerHorizontal="true"
        android:onClick="openBuildItBigger" />

    <Button
        android:text="Make Your App Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MakeYourAppMaterialButton"
        android:layout_below="@+id/BuildItBiggerButton"
        android:layout_centerHorizontal="true"
        android:onClick="openMakeYourAppMaterial" />

    <Button
        android:text="Go Ubiquitous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GoUbiquitousButton"
        android:layout_below="@+id/MakeYourAppMaterialButton"
        android:layout_centerHorizontal="true"
        android:onClick="openGoUbiquitous" />

    <Button
        android:text="Capstone: My App"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapstoneButton"
        android:layout_below="@+id/GoUbiquitousButton"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:onClick="openCapstone" />
</RelativeLayout>
